package com.onemore.msconsumer;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.rabbitmq.client.Channel;
import com.rabbitmq.client.Connection;
import com.rabbitmq.client.ConnectionFactory;
import com.rabbitmq.client.DeliverCallback;

@SpringBootApplication
public class MsConsumerApplication {

	private final static String HOST = "localhost";
	private final static String QUEUE_INFO = "QUEUE_INFO";

    public static void main(String[] args) throws Exception {
    	
    	SpringApplication.run(MsConsumerApplication.class, args);
    	
    	Channel channel = getChannelFromLocalhost();
        conectarColaHello(channel);
        
        System.out.println("holas");
        
    }
    
    private static Channel getChannelFromLocalhost() {
        ConnectionFactory factory = new ConnectionFactory();
        factory.setHost(HOST);
        Connection connection;
        Channel channel = null;
		try {
			connection = factory.newConnection();
			channel = connection.createChannel();
		} catch (Exception e) {
			e.printStackTrace();
		}
		return channel;
    }
    
    private static void conectarColaHello(Channel channel) {
        try {
			channel.queueDeclare(QUEUE_INFO, false, false, false, null);
	        DeliverCallback deliverCallback = (consumerTag, delivery) -> {
	            String message = new String(delivery.getBody(), "UTF-8");
	            System.out.println(" [x] Recibido en QUEUE_INFO: '" + message + "'");
	        };
	        channel.basicConsume(QUEUE_INFO, true, deliverCallback, consumerTag -> { });
		} catch (Exception e) {
			e.printStackTrace();
		}
    }

}
